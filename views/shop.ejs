<%- include('./partials/header') %>

<% if(success.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 z-50 p-3 rounded-none border-l-4 border-cyan-500 bg-gray-900/90 backdrop-blur shadow-[0_0_15px_rgba(6,182,212,0.3)] transition-all duration-300">
        <span class="inline-block font-mono text-cyan-400 text-sm">
            >> SYSTEM: <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex items-start bg-black text-gray-300 selection:bg-purple-500 selection:text-white">
    
    <div class="w-[20%] flex h-screen flex-col items-start px-10 py-20 border-r border-gray-800 sticky top-0 bg-gray-900/50 backdrop-blur-sm">
        <div class="flex flex-col gap-3 mb-12 w-full">
            <h3 class="font-bold text-gray-500 uppercase tracking-widest text-xs mb-2 font-mono">/// Filter Parameters</h3>
            <form action="/shop">
                <select class="bg-black border border-gray-700 text-gray-300 rounded-none px-3 py-2 w-full outline-none focus:border-cyan-500 cursor-pointer font-mono text-xs uppercase" name="sortby">
                    <option value="popular">Mode: Popular</option>
                    <option value="newest">Mode: Newest</option>
                </select>
            </form>
        </div>

        <div class="flex flex-col gap-4 w-full">
             <h3 class="font-bold text-gray-500 uppercase tracking-widest text-xs mb-2 font-mono">/// Navigation</h3>
            <a class="block w-full py-2 border-l-2 border-transparent hover:border-cyan-400 pl-4 text-gray-400 hover:text-cyan-400 hover:bg-white/5 transition-all duration-200 font-medium text-sm" href="">New Collection</a>
            <a class="block w-full py-2 border-l-2 border-cyan-400 pl-4 text-white bg-white/5 font-medium text-sm shadow-[inset_10px_0_20px_-10px_rgba(34,211,238,0.2)]" href="">All Products</a>
            <a class="block w-full py-2 border-l-2 border-transparent hover:border-cyan-400 pl-4 text-gray-400 hover:text-cyan-400 hover:bg-white/5 transition-all duration-200 font-medium text-sm" href="">Discounted</a>
        </div>

        <div class="mt-auto mb-10 w-full">
            <div class="h-[1px] w-full bg-gradient-to-r from-transparent via-gray-700 to-transparent"></div>
            <p class="text-[10px] text-gray-600 font-mono mt-4 text-center">SYSTEM STATUS: ONLINE</p>
        </div>
    </div>

    <div class="w-[80%] flex flex-col gap-5 p-20 min-h-screen relative">
         <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px] pointer-events-none"></div>
         
        <div class="relative z-10 flex flex-wrap gap-12 justify-start">
            <% products.forEach(function(product){ %>
                <div class="w-64 group relative">
                    <div class="absolute -top-1 -left-1 w-3 h-3 border-t-2 border-l-2 border-gray-600 group-hover:border-cyan-400 transition-colors"></div>
                    <div class="absolute -top-1 -right-1 w-3 h-3 border-t-2 border-r-2 border-gray-600 group-hover:border-cyan-400 transition-colors"></div>
                    <div class="absolute -bottom-1 -left-1 w-3 h-3 border-b-2 border-l-2 border-gray-600 group-hover:border-cyan-400 transition-colors"></div>
                    <div class="absolute -bottom-1 -right-1 w-3 h-3 border-b-2 border-r-2 border-gray-600 group-hover:border-cyan-400 transition-colors"></div>

                    <div class="w-full h-60 flex items-center justify-center overflow-hidden bg-gray-900 border border-gray-800 group-hover:border-gray-600 transition-all duration-300 relative">
                        <div class="absolute inset-0 opacity-20 bg-[<%= product.bgcolor %>] mix-blend-screen group-hover:opacity-30 transition-opacity"></div>
                        
                        <img class="h-[14rem] object-contain relative z-10 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-500 ease-out drop-shadow-2xl" 
                             src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                             alt="<%= product.name %>">
                    </div>
                    
                    <div class="flex justify-between items-center px-4 py-4 bg-black border-x border-b border-gray-800">
                        <div class="flex flex-col">
                            <h3 class="font-bold text-lg leading-tight text-white group-hover:text-cyan-400 transition-colors tracking-tight">
                                <%= product.name %>
                            </h3>
                            <h4 class="text-sm font-mono text-gray-500 mt-1">
                                <span class="text-cyan-600">â‚¹</span> <%= product.price %>
                            </h4>
                        </div>
                        
                        <a class="w-10 h-10 flex items-center justify-center border border-gray-600 rounded-none text-gray-400 hover:border-cyan-400 hover:text-cyan-400 hover:bg-cyan-400/10 transition-all active:scale-95" 
                           href="/addtocart/<%=product._id %>">
                            <i class="ri-add-line text-xl"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>