<%- include('./partials/header') %>

<% if(success.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 z-50 p-3 rounded-md bg-blue-500 shadow-lg transition-all duration-300">
        <span class="inline-block mt-1 mb-1 font-semibold text-white">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex items-start bg-zinc-100 text-zinc-800">
    
    <div class="w-[20%] flex h-screen flex-col items-start px-10 py-20 border-r border-zinc-200 sticky top-0">
        <div class="flex flex-col gap-3 mb-10 w-full">
            <h3 class="font-bold text-lg tracking-tight">Sort by</h3>
            <form action="/shop">
                <select class="border border-zinc-300 rounded-md px-3 py-2 w-full outline-none focus:ring-2 focus:ring-black cursor-pointer text-sm" name="sortby">
                    <option value="popular">Popular</option>
                    <option value="newest">Newest</option>
                </select>
            </form>
        </div>

        <div class="flex flex-col gap-3">
            <a class="text-zinc-500 hover:text-black hover:translate-x-1 transition-all duration-200 font-medium" href="">New Collection</a>
            <a class="text-zinc-500 hover:text-black hover:translate-x-1 transition-all duration-200 font-medium" href="">All Products</a>
            <a class="text-zinc-500 hover:text-black hover:translate-x-1 transition-all duration-200 font-medium" href="">Discounted Products</a>
        </div>

        <div class="mt-20 flex flex-col gap-3">
            <h3 class="font-bold text-lg tracking-tight mb-2">Filter by</h3>
            <a class="text-zinc-500 hover:text-black hover:translate-x-1 transition-all duration-200 font-medium" href="">Availability</a>
            <a class="text-zinc-500 hover:text-black hover:translate-x-1 transition-all duration-200 font-medium" href="">Discount</a>
        </div>
    </div>

    <div class="w-[80%] flex flex-col gap-5 p-20 min-h-screen">
        <div class="flex flex-wrap gap-10 justify-start">
            <% products.forEach(function(product){ %>
                <div class="w-60 group">
                    <div class="w-full h-52 flex items-center justify-center rounded-t-xl overflow-hidden bg-[<%= product.bgcolor %>] transition-all duration-300">
                        <img class="h-[12rem] object-contain group-hover:scale-105 transition-transform duration-300 ease-in-out" 
                             src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                             alt="<%= product.name %>">
                    </div>
                    
                    <div class="flex justify-between bg-[<%= product.panelcolor %>] items-center px-5 py-4 text-[<%= product.textcolor %>] rounded-b-xl shadow-md group-hover:shadow-xl transition-shadow duration-300">
                        <div class="flex flex-col">
                            <h3 class="font-semibold text-lg leading-tight">
                                <%= product.name %>
                            </h3>
                            <h4 class="opacity-80 mt-1">â‚¹ <%= product.price %></h4>
                        </div>
                        
                        <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white text-black hover:bg-zinc-200 transition-colors shadow-sm" 
                           href="/addtocart/<%=product._id %>">
                            <i class="ri-add-line font-bold"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>