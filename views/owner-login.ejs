<%- include('./partials/header') %>
    <div class="w-full h-screen flex bg-black items-center justify-center relative overflow-hidden">
        
        <div class="absolute w-[500px] h-[500px] border border-gray-800 rounded-full animate-spin [animation-duration:10s]"></div>
        <div class="absolute w-[400px] h-[400px] border border-dashed border-gray-800 rounded-full animate-spin [animation-duration:15s] direction-reverse"></div>

        <div class="z-10 w-full max-w-md bg-gray-900/80 backdrop-blur-xl border border-gray-700 p-10 shadow-2xl relative">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-red-500 to-transparent"></div>
            
            <div class="text-center mb-10">
                <i class="ri-shield-keyhole-line text-4xl text-red-500 mb-2"></i>
                <h4 class="text-2xl text-white font-mono uppercase tracking-widest">Admin Access</h4>
                <p class="text-xs text-red-500/70 mt-2">RESTRICTED AREA: AUTHORIZED PERSONNEL ONLY</p>
            </div>

            <form action="/create" method="post" class="flex flex-col gap-4">
                <input class="block bg-black text-white w-full px-4 py-3 border border-gray-700 focus:border-red-500 focus:outline-none transition-colors font-mono text-sm placeholder-gray-600"
                    type="email" placeholder="IDENTIFIER (EMAIL)" name="email">
                <input class="block bg-black text-white w-full px-4 py-3 border border-gray-700 focus:border-red-500 focus:outline-none transition-colors font-mono text-sm placeholder-gray-600"
                    type="password" placeholder="SECURITY KEY (PASSWORD)" name="password">
                <input class="w-full py-3 mt-4 bg-red-600 hover:bg-red-700 text-white font-bold uppercase tracking-widest cursor-pointer transition-all shadow-[0_0_15px_rgba(220,38,38,0.4)]" type="submit" value="Unlock Terminal">
            </form>
        </div>
    </div>
<%- include('./partials/footer') %>