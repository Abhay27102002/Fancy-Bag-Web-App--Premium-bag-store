<%- include('./partials/header') %>

<% if(error.length>0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 z-50 p-4 rounded border border-red-500 bg-black/80 backdrop-blur-md shadow-[0_0_20px_rgba(239,68,68,0.5)]">
        <span class="inline-block font-mono text-red-500 tracking-widest uppercase text-sm">
            <i class="ri-error-warning-fill mr-2"></i><%= error %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex flex-col md:flex-row font-sans bg-black text-gray-200 selection:bg-cyan-500 selection:text-black">
    
    <div class="w-full md:w-1/2 flex items-center justify-center min-h-screen bg-gray-900 relative overflow-hidden border-r border-gray-800">
        <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-cyan-500/20 rounded-full blur-[120px]"></div>
        <div class="absolute bottom-1/4 right-1/4 w-64 h-64 bg-purple-600/20 rounded-full blur-[100px]"></div>

        <div class="w-full max-w-md z-10 px-10">
            <h3 class="text-6xl font-black tracking-tighter mb-2 text-white uppercase drop-shadow-[0_0_10px_rgba(255,255,255,0.5)]">
                Fancy<span class="text-cyan-400">Bag</span><span class="text-xs align-top bg-gray-800 px-1 py-0.5 rounded text-gray-400 ml-2">V.2.0</span>
            </h3>
            <h4 class="text-lg text-gray-400 mb-10 font-mono border-l-2 border-cyan-500 pl-4">
                Initialize your style sequence.
            </h4>
            
            <form autocomplete="off" action="/users/register" method="post" class="flex flex-col gap-5">
                <div class="group relative">
                    <input
                        class="bg-black/50 text-white block w-full px-5 py-3 border border-gray-700 rounded-none focus:outline-none focus:border-cyan-400 focus:shadow-[0_0_15px_rgba(34,211,238,0.3)] transition-all placeholder-gray-600 font-mono text-sm"
                        type="text" placeholder="ID_FULLNAME" name="fullname">
                </div>
                <div>
                    <input
                        class="bg-black/50 text-white block w-full px-5 py-3 border border-gray-700 rounded-none focus:outline-none focus:border-cyan-400 focus:shadow-[0_0_15px_rgba(34,211,238,0.3)] transition-all placeholder-gray-600 font-mono text-sm"
                        type="email" placeholder="CONTACT_EMAIL" name="email">
                </div>
                <div>
                    <input
                        class="bg-black/50 text-white block w-full px-5 py-3 border border-gray-700 rounded-none focus:outline-none focus:border-cyan-400 focus:shadow-[0_0_15px_rgba(34,211,238,0.3)] transition-all placeholder-gray-600 font-mono text-sm"
                        type="password" placeholder="SECURE_PASSWORD" name="password">
                </div>
                
                <input class="cursor-pointer w-full px-5 py-3 mt-4 rounded-none bg-cyan-600 hover:bg-cyan-500 text-black font-bold tracking-widest uppercase transition-all shadow-[0_0_20px_rgba(8,145,178,0.4)] hover:shadow-[0_0_30px_rgba(34,211,238,0.6)] clipped-corner" 
                    type="submit"
                    value="Execute Registration">
            </form>
        </div>
    </div>

    <div class="w-full md:w-1/2 flex items-center justify-center min-h-screen bg-black relative">
        <div class="absolute inset-0 bg-[linear-gradient(to_right,#1f2937_1px,transparent_1px),linear-gradient(to_bottom,#1f2937_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_50%,#000_70%,transparent_100%)] pointer-events-none opacity-20"></div>

        <div class="w-full max-w-md z-10 px-10">
            <h4 class="text-3xl font-bold text-white mb-2 tracking-tight">User Login</h4>
            <p class="text-gray-500 mb-8 font-mono text-xs uppercase tracking-widest">ENTER YOUR CREDENTIALS</p>
            
            <form autocomplete="off" action="/users/login" method="post" class="flex flex-col gap-4">
                <div>
                    <input
                        class="bg-gray-900/80 block w-full px-5 py-3 border border-gray-800 rounded-none focus:outline-none focus:border-purple-500 focus:text-purple-100 transition-all text-gray-300 placeholder-gray-700 font-mono text-sm"
                        type="email" placeholder="EMAIL" name="email">
                </div>
                <div>
                    <input
                        class="bg-gray-900/80 block w-full px-5 py-3 border border-gray-800 rounded-none focus:outline-none focus:border-purple-500 focus:text-purple-100 transition-all text-gray-300 placeholder-gray-700 font-mono text-sm"
                        type="password" placeholder="PASSWORD" name="password">
                </div>
                
                <input class="cursor-pointer block w-full px-5 py-3 mt-4 rounded-none border border-gray-600 hover:border-white hover:bg-white hover:text-black text-white font-semibold transition-all uppercase tracking-wider text-sm" 
                    type="submit"
                    value="Access Dashboard">
            </form>
        </div>
    </div>

</div>

<%- include('./partials/footer') %>