<%- include('./partials/header') %>

<% if(error.length>0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-red-500 shadow-lg animate-bounce">
        <span class="inline-block font-medium text-white tracking-wide">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full min-h-screen flex flex-col md:flex-row font-sans">
    
    <div class="w-full md:w-1/2 flex items-center justify-center min-h-screen bg-zinc-900 text-white px-10 py-10 relative overflow-hidden">
        
        <div class="absolute -top-20 -left-20 w-64 h-64 bg-blue-500 rounded-full blur-[100px] opacity-20"></div>

        <div class="w-full max-w-md z-10">
            <h3 class="text-5xl font-bold tracking-tighter mb-2">Welcome to <span class="text-blue-500">Fancy Bag</span></h3>
            <h4 class="text-xl text-zinc-400 mb-8 font-light">Join us to start your journey.</h4>
            
            <form autocomplete="off" action="/users/register" method="post" class="flex flex-col gap-4">
                <div class="group">
                    <input
                        class="bg-zinc-800 text-white block w-full px-5 py-3 border border-zinc-700 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all placeholder-zinc-500"
                        type="text" placeholder="Full Name" name="fullname">
                </div>
                <div>
                    <input
                        class="bg-zinc-800 text-white block w-full px-5 py-3 border border-zinc-700 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all placeholder-zinc-500"
                        type="email" placeholder="Email Address" name="email">
                </div>
                <div>
                    <input
                        class="bg-zinc-800 text-white block w-full px-5 py-3 border border-zinc-700 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all placeholder-zinc-500"
                        type="password" placeholder="Password" name="password">
                </div>
                
                <input class="cursor-pointer w-full px-5 py-3 mt-4 rounded-full bg-blue-600 hover:bg-blue-500 text-white font-semibold tracking-wide transition-all shadow-lg hover:shadow-blue-500/30" 
                    type="submit"
                    value="Create My Account">
            </form>
        </div>
    </div>

    <div class="w-full md:w-1/2 flex items-center justify-center min-h-screen bg-zinc-50 px-10 py-10">
        <div class="w-full max-w-md">
            <h4 class="text-3xl font-bold text-zinc-800 mb-2">Welcome Back</h4>
            <p class="text-zinc-500 mb-8">Login to access your dashboard.</p>
            
            <form autocomplete="off" action="/users/login" method="post" class="flex flex-col gap-4">
                <div>
                    <input
                        class="bg-white block w-full px-5 py-3 border border-zinc-200 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all text-zinc-700 placeholder-zinc-400 shadow-sm"
                        type="email" placeholder="Email" name="email">
                </div>
                <div>
                    <input
                        class="bg-white block w-full px-5 py-3 border border-zinc-200 rounded-lg focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all text-zinc-700 placeholder-zinc-400 shadow-sm"
                        type="password" placeholder="Password" name="password">
                </div>
                
                <input class="cursor-pointer block w-full px-5 py-3 mt-4 rounded-full bg-zinc-800 hover:bg-black text-white font-semibold transition-all shadow-md" 
                    type="submit"
                    value="Login to Account">
            </form>
        </div>
    </div>

</div>

<%- include('./partials/footer') %>