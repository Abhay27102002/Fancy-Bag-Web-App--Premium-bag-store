<%- include('./partials/header') %>

<div class="w-full min-h-screen flex items-start px-20 py-20 gap-10 bg-black text-gray-200 font-sans selection:bg-cyan-500 selection:text-black">
    
    <div class="w-[70%] flex flex-col gap-4">
        <h2 class="text-2xl font-bold uppercase tracking-widest text-gray-500 mb-5 font-mono">MY CART</h2>
        
        <% if(user.cart.length > 0) { %>
            <% user.cart.forEach(function(item){ %>
                <div class="w-full border border-gray-800 flex bg-gray-900/50 hover:bg-gray-900 hover:border-cyan-500/50 transition-all group relative overflow-hidden">
                    <div class="absolute top-0 left-0 w-[2px] h-full bg-cyan-500 opacity-0 group-hover:opacity-100 transition-opacity"></div>

                    <div class="w-1/3 flex justify-center items-center h-48 p-5 bg-black/40 relative">
                        <div class="absolute inset-0 bg-[<%= item.bgcolor %>] opacity-10 blur-xl"></div>
                        <img class="h-[10rem] object-contain relative z-10 drop-shadow-[0_10px_20px_rgba(0,0,0,0.5)]" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
                    </div>
                    
                    <div class="w-2/3 flex flex-col justify-between p-6">
                        <div class="flex justify-between items-start">
                            <div>
                                <h3 class="text-2xl font-bold text-white tracking-tight"><%= item.name %></h3>
                                <p class="text-xs text-gray-500 font-mono mt-1">ID: #<%= item._id.toString().slice(-6).toUpperCase() %></p>
                            </div>
                            <div class="flex items-center gap-3 bg-black border border-gray-700 px-2 py-1">
                                <i class="w-6 h-6 flex items-center justify-center ri-add-line cursor-pointer hover:text-cyan-400 transition-colors"></i>
                                <div class="px-2 text-cyan-400 font-mono font-bold">01</div>
                                <i class="w-6 h-6 flex items-center justify-center ri-subtract-line cursor-pointer hover:text-red-400 transition-colors"></i>
                            </div>
                        </div>
                        
                        <div class="flex items-center justify-between mt-5 border-t border-gray-800 pt-4">
                            <h4 class="text-sm font-mono text-gray-500 uppercase">Net Calculation</h4>
                            <h2 class="text-xl font-bold text-cyan-400 font-mono">₹ <%= Number(item.price) - Number(item.discount) %></h2> 
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="w-full h-64 border border-dashed border-gray-700 flex flex-col items-center justify-center text-gray-600">
                <i class="ri-shopping-cart-line text-4xl mb-2"></i>
                <h1 class="text-xl font-mono uppercase">Data Stream Empty</h1>
            </div>
        <% } %>
    </div>

    <div class="w-[30%]">
        <div class="sticky top-24 border border-gray-800 bg-gray-900/80 backdrop-blur-md p-6 relative">
             <div class="absolute top-0 left-0 w-2 h-2 border-t border-l border-cyan-500"></div>
             <div class="absolute bottom-0 right-0 w-2 h-2 border-b border-r border-cyan-500"></div>

            <h3 class="text-xl font-bold text-white uppercase tracking-wider mb-6 border-b border-gray-700 pb-2">
                <i class="ri-secure-payment-line mr-2 text-cyan-500"></i>Transaction
            </h3>
            
            <div class="flex flex-col gap-3 text-sm font-mono text-gray-400">
                <div class="flex justify-between">
                    <h4 class="uppercase">Total MRP</h4>
                    <h4 class="text-white">₹ <%= totalMRP %></h4>
                </div>
                <div class="flex justify-between">
                    <h4 class="uppercase">Discount</h4>
                    <h4 class="text-red-400">- ₹ <%= totalDiscount %></h4>
                </div>
                <div class="flex justify-between">
                    <h4 class="uppercase">Platform Fee</h4>
                    <h4 class="text-white">₹ <%= platformFee %></h4>
                </div>
                <div class="flex justify-between">
                    <h4 class="uppercase">Shipping</h4>
                    <h4 class="text-green-400">FREE</h4>
                </div>
            </div>
            
            <div class="w-full h-[1px] bg-dashed border-t border-dashed border-gray-600 mt-6 mb-6"></div>
            
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-lg font-bold text-white uppercase">Total Amount</h3>
                <h3 class="font-bold text-2xl text-cyan-400 font-mono text-shadow-neon">₹ <%= bill %></h3>
            </div>
            
            <button class="w-full bg-cyan-600 hover:bg-cyan-500 text-black font-bold uppercase py-4 tracking-widest transition-all shadow-[0_0_20px_rgba(8,145,178,0.4)] clip-path-slant">
                Checkout
            </button>
        </div>
    </div>

</div>

<%- include('./partials/footer') %>