<%- include('./partials/header') %>

<div class="w-full min-h-screen flex items-start px-20 py-20 gap-10">
    
    <div class="w-[70%] flex flex-col gap-5">
        <% if(user.cart.length > 0) { %>
            <% user.cart.forEach(function(item){ %>
                <div class="w-full rounded-md overflow-hidden flex bg-[<%= item.bgcolor %>]">
                    <div class="w-1/3 flex justify-center items-center h-full p-5">
                        <img class="h-[10rem] object-contain" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
                    </div>
                    
                    <div class="w-2/3 flex flex-col justify-between p-5 bg-[<%= item.panelcolor %>] bg-opacity-10">
                        <div class="flex justify-between items-center">
                            <h3 class="text-2xl font-semibold"><%= item.name %></h3> <div class="flex items-center gap-2">
                                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line cursor-pointer"></i>
                                <div class="px-2 py-1 rounded-md bg-white text-black font-bold">01</div>
                                <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line cursor-pointer"></i>
                            </div>
                        </div>
                        
                        <div class="flex items-center justify-between mt-5">
                            <h4 class="text-lg opacity-70">Net Total</h4>
                            <h2 class="text-lg font-bold">₹ <%= Number(item.price) - Number(item.discount) %></h2> 
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h1 class="text-3xl text-center mt-10">Your cart is empty</h1>
        <% } %>
    </div>

    <div class="w-[30%]">
        <div class="sticky top-20"> <h3 class="text-xl font-bold">Price Breakdown</h3>
            <div class="px-5 mt-5">
                <div class="flex mt-2 justify-between">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= totalMRP %></h4>
                </div>
                <div class="flex mt-2 justify-between">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>- ₹ <%= totalDiscount %></h4>
                </div>
                <div class="flex mt-2 justify-between">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ <%= platformFee %></h4>
                </div>
                <div class="flex mt-2 justify-between">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4 class="text-green-600">FREE</h4>
                </div>
            </div>
            
            <div class="w-full h-[1px] bg-black mt-10 opacity-20"></div>
            
            <div class="flex mt-5 justify-between items-center">
                <h3 class="text-xl font-bold">Total Amount</h3>
                <h3 class="font-bold text-xl text-green-600">₹ <%= bill %></h3>
            </div>
            
            <button class="w-full bg-black text-white py-3 rounded-md mt-5">Checkout</button>
        </div>
    </div>

</div>

<%- include('./partials/footer') %>